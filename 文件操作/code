#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>
#include <sys/stat.h>
int main()
{
  //存在掩码，所以在本进程中需要屏蔽系统掩码通常为0022
    umask(0);
    const char*message="helloworld&bit";
    int fd_1=open("log.txt",O_WRONLY|O_CREAT|O_TRUNC,0666);
    if(fd_1<0)
    {
        perror("open file fail");
        return 1;
    }
    write(fd_1,message,strlen(message));
    close(fd_1);
    char buffer[1024];
  //再次对文件操作，需要首先打开文件
    int fd_2=open("log.txt",O_RDWR,0666);
    if(fd_2<0)
    {
        perror("open file fail");
        return 1;
    }
    ssize_t rd=read(fd_2,buffer,strlen(message));
    if(rd<0)
    {
        perror("read file fail");
    }
    printf("%s\n",buffer);
    close(fd_2);


    return 0;
}
